<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/main_background">


    <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@drawable/ic_cotizador"
            android:id="@+id/btnCotizador"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintEnd_toStartOf="@+id/btnIzettle" android:layout_marginEnd="10dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:backgroundTint="#2EB125" android:tint="#001E7E25"/>
    <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@color/colorPrimary"
            android:id="@+id/btnVentas" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
    />
    <ImageView
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.513"/>
    <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp" app:srcCompat="@drawable/ic_izettke"
            android:id="@+id/btnIzettle"
            app:layout_constraintEnd_toStartOf="@+id/btnVentas" android:layout_marginEnd="10dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:backgroundTint="@android:color/holo_blue_dark"/>

</androidx.constraintlayout.widget.ConstraintLayout>