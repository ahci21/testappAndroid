<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Cotizador">


    <Button
            android:text="@string/calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalcular" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="244dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="@string/cotizador_ventas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:id="@+id/txtTitleCotizador" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:text="@string/_0"
            android:ems="10"
            android:id="@+id/editCantidad"
            android:autofillHints=""
            app:layout_constraintStart_toEndOf="@+id/txtDinero" android:layout_marginStart="20dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="@string/MoneyTag"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:id="@+id/txtDinero"
            android:textColor="#32A852"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="@string/_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtValorFinal"
            app:layout_constraintStart_toEndOf="@+id/editCantidad"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.538"/>
    <TextView
            android:text="@string/venta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/swIvaVenta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"/>
    <TextView
            android:text="@string/ganancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/editGanancia"
            app:layout_constraintStart_toEndOf="@+id/swIvaVenta" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.607"/>
    <EditText
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="@string/_0"
            android:ems="10"
            android:id="@+id/editGanancia"
            android:autofillHints=""
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCalcular"/>
    <TextView
            android:text="@string/costo_compra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleCotizador" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp"/>
    <TextView
            android:text="@string/costo_venta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="84dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/txtValorFinal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleCotizador" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/PorcentageTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/swIvaVenta"
            android:layout_marginStart="64dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <Switch
            android:text="@string/iva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swIvaVenta"
            android:layout_marginTop="104dp" app:layout_constraintTop_toBottomOf="@+id/editCantidad"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="88dp"/>
    <TextView
            android:text="Ganancia en Pesos: $0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3153A8"
            android:id="@+id/txtGananciaFinal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCalcular" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>